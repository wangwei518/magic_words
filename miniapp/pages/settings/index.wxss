.page {
  padding-top: 180rpx;   /* 避开状态栏 + 胶囊按钮 */
  background: #f5f6f7;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 26rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  background: #f3f3f3;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 30rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.value {
  font-size: 30rpx;
  color: #666;
}

.arrow {
  font-size: 40rpx;
  margin-left: 12rpx;
  color: #ccc;
}

.segment {
  display: flex;
  background: #f0f0f0;
  padding: 6rpx;
  border-radius: 16rpx;
  margin: 10rpx 0 20rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #555;
}

.seg-item.active {
  background: #1a73e8;
  color: #fff;
}

.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.row-label {
  font-size: 30rpx;
  color: #333;
}

.desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
}

.username-text {
  margin-top: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.value-text {
  font-size: 30rpx;
  color: #666;
}

.row-value {
  font-size: 30rpx;
  color: #666;
  max-width: 60%;
  text-align: right;
}
