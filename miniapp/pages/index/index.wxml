<view class="page">

  <!-- 问候 + 今日进度 -->
  <view class="card">
    <view class="row-between">
      <text class="hello-text">
        你好，{{username || '同学'}}
      </text>
      <text class="small-text">
        今日 {{completedToday}} / {{dailyTarget}}
      </text>
    </view>

    <view class="progress-bar">
      <view class="progress-inner" style="width: {{progressPercent}}%;"></view>
      <view class="progress-text">{{progressPercent}}%</view>
    </view>
  </view>

  <!-- 当前词书 -->
  <view class="card row-between">
    <view>
      <view class="label">当前词书</view>
      <view class="book-name">
        {{currentBookName || '尚未选择词书'}}
      </view>
    </view>
    <button class="mini-btn" size="mini" bindtap="onGoSettings">
      去设置
    </button>
  </view>

  <!-- 主操作按钮区 -->
  <view class="main-btn-group">
    <button class="btn-primary" bindtap="onStartStudy">
      开始学习
    </button>
    <button class="btn-secondary" bindtap="onGoWrongList">
      错词本
    </button>
    <button class="btn-secondary" bindtap="onGoSettings">
      设置
    </button>
  </view>

</view>
